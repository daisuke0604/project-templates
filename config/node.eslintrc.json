{
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["jest", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "max-len": "warn",
    "no-console": "off",
    "no-unused-vars": "warn",
    "require-await": "error",
    "strict": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5"
      }
    ]
  }
}
